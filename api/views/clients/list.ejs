<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head.ejs') %>
<body>

<%- include('../partials/nav.ejs') %>

<div class="grid-container">
    <div class="cell small-12">
        <div class="grid-x">
            <div class="cell small-7 medium-10">
                <h2 class="margin-bottom-0">Clients</h2>
            </div>
            <div class="cell small-5 medium-2 text-right padding-top-1">
                <a class="button secondary small" data-open="addClientModal" onclick="resetClientForm();">Add Client</a>
            </div>
        </div>
    </div>
    <hr class="hr-title-separator">
    <div class="callout success" data-closable id="alertContainer" style="display:none;">
        <span id="message"></span>
        <button class="close-button" aria-label="Dismiss alert" type="button" data-close>
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="cell small-12">
        <table class="stack" id="clientTable">
            <thead>
            <tr>
                <th class="small-2 medium-1">Code</th>
                <th class="small-2 medium-3">Name</th>
                <th class="small-3 medium-3">Commercial Name</th>
                <th class="small-2 medium-2">Email</th>
                <th class="small-2 medium-2">Phone</th>
                <th class="small-1 medium-1">&nbsp</th>
            </tr>
            </thead>
            <tbody>
            <tr></tr>
            <% clients.forEach(client => { %>
                <tr id="<%= client._id %>">
                    <td><%= client.code %></td>
                    <td><%= client.name %></td>
                    <td><%= client.commercial_name %></td>
                    <td><%= client.email %></td>
                    <td><%= client.phone %></td>
                    <td class="text-center">
                        <div class="fi-page-edit display-inline padding-right-1" onclick="$('#addClientModal').foundation('open'); getClient('<%= client._id %>')"></div>
                        <div class="fi-trash display-inline" onclick="removeClient('<%= client._id %>')"></div>
                    </td>
                </tr>
            <% }); %>
            </tbody>
        </table>
    </div>
</div>
<div class="reveal large" id="addClientModal" data-reveal>
    <%- include('./add-client.ejs') %>
</div>
<%- include('../partials/footer.ejs') %>
<%- include('../partials/scripts.ejs') %>
<script src="/assets/js/clients.js"></script>
</body>
</html>
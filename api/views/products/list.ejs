<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head.ejs') %>
<body>

<%- include('../partials/nav.ejs') %>

<div class="grid-container fluid">
    <div class="cell small-12">
        <div class="grid-x">
            <div class="cell small-7 medium-10">
                <h2 class="margin-bottom-0">Orders</h2>
            </div>
            <div class="cell small-5 medium-2 text-right padding-top-1">
                <a href="/products/new" class="button secondary small">Add new Product</a>
            </div>
        </div>
    </div>
    <hr class="hr-title-separator">
    <div class="cell small-12">
        <table class="stack">
            <thead>
            <tr>
                <th class="small-2 medium-2">Code</th>
                <th class="small-4 medium-4">Name</th>
                <th class="small-3 medium-4">Provider</th>
                <th class="small-2 medium-1">Price</th>
                <th class="small-1 medium-1">&nbsp</th>
            </tr>
            </thead>
            <tbody>
            <% products.forEach(product => { %>
                <tr>
                    <td>$<%= product.code %></td>
                    <td>$<%= product.name %></td>
                    <td>$<%= product.provider %></td>
                    <td>$<%= product.price %></td>
                    <td class="text-right"><a href="/products/view/<%= product._id %>" class="button hollow small" style="margin-top: 10px">View Order</td>
                </tr>
            <% }); %>
            </tbody>
        </table>
    </div>
</div>

<%- include('../partials/footer.ejs') %>
<%- include('../partials/scripts.ejs') %>
</body>
</html>
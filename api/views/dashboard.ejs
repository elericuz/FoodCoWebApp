<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head.ejs') %>
<body>

<%- include('./partials/nav.ejs') %>

<div class="grid-container fluid">
    <div class="cell small-12">
        <h2>Inventory</h2>
    </div>
    <hr>
    <div class="cell small-12">
        <div class="grid-x grid-margin-x">
            <div class="cell small-2 text-right text-vertical-center">
                Enter Item Code
            </div>
            <div class="cell small-2">
                <input type="text" class="textinput">
            </div>
            <div class="cell small-1">
                <button class="button small">Search</button>
            </div>
        </div>
    </div>
    <hr>
    <div class="grid-x grid-margin-x">
        <div class="cell small-11">
            <div class="grid-x grid-margin-x">
                <div class="cell small-1 text-right text-vertical-center">
                    Code
                </div>
                <div class="cell small-2">
                    <input type="text" class="textinput">
                </div>
                <div class="cell small-2 text-right text-vertical-center">
                    Description
                </div>
                <div class="cell auto">
                    <input type="text" class="textinput">
                </div>
            </div>
            <div class="grid-x grid-margin-x">
                <div class="cell small-1 text-right text-vertical-center">
                    Site
                </div>
                <div class="cell small-2">
                    <input type="text" class="textinput">
                </div>
                <div class="cell small-2 text-right text-vertical-center">
                    Spanish
                </div>
                <div class="cell auto">
                    <input type="text" class="textinput">
                </div>
            </div>
        </div>
    </div>
    <hr>
    <div class="cell small-12">
        <form>
            <ul class="tabs" data-tabs id="dashboard-tabs">
                <li class="tabs-title is-active"><a href="#statusPanel" aria-selected="true">Status</a></li>
                <li class="tabs-title"><a data-tabs-target="infoPanel" href="#infoPanel">Item Info</a></li>
                <li class="tabs-title"><a data-tabs-target="unitsPanel" href="#unitsPanel">Units of Measure</a></li>
                <li class="tabs-title"><a data-tabs-target="adjustmentsPanel" href="#adjustmentsPanel">Adjustments</a>
                </li>
                <li class="tabs-title"><a data-tabs-target="exclusivePanel" href="#exclusivePanel">Exclusive</a></li>
                <li class="tabs-title"><a data-tabs-target="usagePanel" href="#usagePanel">Usage</a></li>
                <li class="tabs-title"><a data-tabs-target="lotsPanel" href="#lotsPanel">Lots</a></li>
                <li class="tabs-title"><a data-tabs-target="salesPanel" href="#salesPanel">Sales</a></li>
                <li class="tabs-title"><a data-tabs-target="requiredPanel" href="#requiredPanel">Required</a></li>
                <li class="tabs-title"><a data-tabs-target="recipesPanel" href="#recipesPanel">Recipes</a></li>
                <li class="tabs-title"><a data-tabs-target="picturesPanel" href="#picturesPanel">Pictures</a></li>
            </ul>
            <div class="tabs-content" data-tabs-content="dashboard-tabs">
                <div class="tabs-panel is-active" id="statusPanel">
                    <%- include('./partials/dashboard/status.ejs') %>
                </div>
                <div class="tabs-panel" id="infoPanel">
                    <%- include('./partials/dashboard/info.ejs') %>
                </div>
                <div class="tabs-panel" id="unitsPanel">
                    <%- include('./partials/dashboard/panel-units.ejs') %>
                </div>
                <div class="tabs-panel" id="adjustmentsPanel">
                    <%- include('./partials/dashboard/adjustments.ejs') %>
                </div>
                <div class="tabs-panel" id="exclusivePanel">
                    <%- include('./partials/dashboard/exclusive.ejs') %>
                </div>
                <div class="tabs-panel" id="usagePanel">
                    <%- include('./partials/dashboard/usage.ejs') %>
                </div>
                <div class="tabs-panel" id="lotsPanel">
                    <%- include('./partials/dashboard/lots.ejs') %>
                </div>
                <div class="tabs-panel" id="salesPanel">
                    <%- include('./partials/dashboard/sales.ejs') %>
                </div>
                <div class="tabs-panel" id="requiredPanel">
                    <%- include('./partials/dashboard/required.ejs') %>
                </div>
                <div class="tabs-panel" id="recipesPanel">
                    <%- include('./partials/dashboard/recipes.ejs') %>
                </div>
                <div class="tabs-panel" id="picturesPanel">
                    <%- include('./partials/dashboard/pictures.ejs') %>
                </div>
            </div>
        </form>
    </div>
</div>

<%- include('./partials/footer.ejs') %>
<%- include('./partials/scripts.ejs') %>
</body>
</html>
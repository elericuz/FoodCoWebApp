<div class="auto cell">
    <form action="/update-personal-info" method="POST" id="personalForm">
        <div class="grid-x grid-margin-x">
            <div class="cell small-2 medium-2 text-right text-vertical-center">Name</div>
            <div class="cell small-4 medium-3">
                <input type="text" class="input-text-2" id="name" name="name" value="<%= userData.user.name %>" placeholder="Your name">
            </div>
            <div class="cell small-2 medium-2 medium-offset-2 text-right text-vertical-center">Last name</div>
            <div class="cell small-4 medium-3">
                <input type="text" class="input-text-2" id="lastname" name="lastname" value="<%= userData.user.lastname %>" placeholder="Your last name">
            </div>
        </div>
        <div class="grid-x grid-margin-x">
            <div class="cell small-2 medium-2 text-right text-vertical-center">Email Address</div>
            <div class="cell small-4 medium-3">
                <input type="text" class="input-text-2" name="email_address" id="email_address" value="<%= userData.user.email_address %>" placeholder="Your email address">
            </div>
            <div class="cell small-2 medium-2 medium-offset-2 text-right text-vertical-center">Phone Number</div>
            <div class="cell small-4 medium-3">
                <input type="text" class="input-text-2" name="phonenumber" id="phonenumber" value="<%= userData.user.phonenumber %>" placeholder="Your phone number">
            </div>
        </div>
        <div class="grid-x grid-margin-x">
            <div class="cell small-12 text-center padding-top-1">
                <a href="#" id="personalFormButton" class="button secondary small">Save Changes</a>
            </div>
        </div>
    </form>
</div>
<hr>
<div class="grid-x grid-margin-x">
    <div class="cell small-12">
        <div class="float-left">
            <h5>Address</h5>
        </div>
        <div class="float-right">
            <button class="button secondary small" data-open="addAddressModal">Add Address</button>
        </div>
    </div>
    <div class="cell small-12">
        <table class="stack" id="addressTable">
            <thead>
            <tr>
                <th class="small-4 medium-2">Type</th>
                <th class="small-7 medium-9">Address</th>
                <th class="small-1 medium-1">&nbsp;</th>
            </tr>
            </thead>
            <tbody>
            <tr></tr>
            <% userData.addresses.forEach(address => { %>
            <tr id="<%= address._id %>">
                <td><%= address.type %></td>
                <td><%= address.street %></td>
                <td><div class="fi-trash" onclick="removeAddress('<%= address._id %>')"></div></td>
            </tr>
            <% }) %>
            </tbody>
        </table>
    </div>
</div>
<div class="reveal" id="addAddressModal" data-reveal>
    <form action="/orders/add-product" method="POST" id="addAddressForm">
        <h3>Add an address</h3>
        <hr>
        <div class="grid-x grid-margin-x">
            <div class="cell small-2 medium-2 text-right">Type</div>
            <div class="cell small-4 medium-4">
                <select name="type" id="type" class="input-text-2" >
                    <option value="Main Address">Main Address</option>
                    <option value="Billing Address">Billing Address</option>
                    <option value="Shipping Address">Shipping Address</option>
                </select>
            </div>
        </div>
        <div class="grid-x grid-margin-x">
            <div class="cell small-2 medium-2 text-right">Street</div>
            <div class="cell small-4 medium-9">
                <input type="text" name="street" id="street" class="input-text-2" placeholder="The street">
            </div>
        </div>
        <div class="grid-x grid-margin-x">
            <div class="cell small-2 medium-2 text-right">City</div>
            <div class="cell small-4 medium-4">
                <input type="text" name="city" id="city" class="input-text-2" placeholder="The city">
            </div>
            <div class="cell small-2 small-offset-1 small-offset-1 medium-2 text-right">State</div>
            <div class="cell small-2 medium-2">
                <input type="text" name="state" id="state" class="input-text-2" placeholder="The state">
            </div>
        </div>
        <div class="grid-x grid-margin-x">
            <div class="cell small-2 medium-2 text-right">Zipcode</div>
            <div class="cell small-4 medium-4">
                <input type="text" name="zipcode" id="zipcode" class="input-text-2" onfocusout="getCity();" placeholder="The zipcode">
            </div>
        </div>
        <div class="grid-x">
            <div class="cell small-2 small-offset-8 text-right padding-right-1">
                <a href="#" class="button alert small" data-close aria-label="Close modal">Cancel</a>
            </div>
            <div class="cell small-2"><a href="#" id="addAddressButton" class="button small secondary">Add</a></div>
        </div>
        <button class="close-button" data-close aria-label="Close modal" type="button">
            <span aria-hidden="true">&times;</span>
        </button>
    </form>
</div>
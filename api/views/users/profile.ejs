<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head.ejs') %>
<body>

<%- include('../partials/nav.ejs') %>

<div class="grid-container fluid">
    <div class="cell small-12">
        <h2>My Account</h2>
    </div>
    <hr class="hr-title-separator">
    <div class="cell small-12">
        <div class="callout success" data-closable id="alertContainer" style="display:none;">
            <span id="message"></span>
            <button class="close-button" aria-label="Dismiss alert" type="button" data-close>
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <ul class="tabs" data-tabs id="dashboard-tabs">
            <li class="tabs-title is-active">
                <a data-tabs-target="infoPanel" href="#infoPanel" aria-selected="true">Personal Information</a>
            </li>
            <li class="tabs-title">
                <a data-tabs-target="changePasswordPanel" href="#changePasswordPanel">Change Password</a>
            </li>
        </ul>
        <div class="tabs-content" data-tabs-content="dashboard-tabs">
            <div class="tabs-panel is-active" id="infoPanel">
                <%- include('./personal.ejs') %>
            </div>
            <div class="tabs-panel" id="changePasswordPanel">
                <%- include('./password.ejs') %>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/footer.ejs') %>
<%- include('../partials/scripts.ejs') %>
<script src="/assets/js/profile.js"></script>
</body>
</html>